# =============================================================================
# TRADING SYSTEM ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=TradingBot
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./data/sqlite/trading_bot.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_bot

# =============================================================================
# BINANCE API CONFIGURATION
# =============================================================================
# Testnet (for development/testing)
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET_KEY=your_testnet_secret_key_here
BINANCE_TESTNET=true
BINANCE_BASE_URL=https://testnet.binance.vision

# Production (for live trading)
# BINANCE_API_KEY=your_live_api_key_here
# BINANCE_SECRET_KEY=your_live_secret_key_here
# BINANCE_TESTNET=false
# BINANCE_BASE_URL=https://api.binance.com

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2  # or mistral, codellama, etc.

# OpenAI (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# REDIS CONFIGURATION (for caching and real-time data)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Risk Management
MAX_POSITION_SIZE=0.1  # 10% of portfolio
MAX_DAILY_LOSS=0.05   # 5% daily loss limit
STOP_LOSS_PERCENTAGE=0.02  # 2% stop loss
TAKE_PROFIT_PERCENTAGE=0.04  # 4% take profit

# Trading Parameters
DEFAULT_SYMBOL=BTCUSDT
TRADING_PAIRS=BTCUSDT,ETHUSDT,ADAUSDT
MIN_TRADE_AMOUNT=10  # Minimum trade amount in USDT
MAX_TRADE_AMOUNT=1000  # Maximum trade amount in USDT

# Strategy Configuration
STRATEGY_UPDATE_INTERVAL=60  # seconds
BACKTEST_DAYS=30
MEAN_REVERSION_LOOKBACK=20
MOMENTUM_LOOKBACK=14

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE_PATH=./data/logs/trading_bot.log
LOG_FORMAT=json
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_LIVE_TRADING=false
ENABLE_AI_DECISIONS=true
ENABLE_BACKTESTING=true
ENABLE_REAL_TIME_CHARTS=true
ENABLE_EMAIL_ALERTS=false

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Only set these in development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOW_CREDENTIALS=true 